            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/scripts.ps1",
                "restart"
            ]
        },
        {
            "label": "Purge containers",
