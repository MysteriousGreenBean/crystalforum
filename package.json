{
    "name": "crystalforum",
    "version": "1.0.0",
    "devDependencies": {
        "@prettier/plugin-php": "^0.22.4",
        "html-validate": "^9.5.5",
        "prettier": "^3.5.3"
    },
    "scripts": {
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "validate-html": "html-validate \"**/*.html\"",
        "beautify": "js-beautify \"**/*.html\" -r",
        "check-format-and-validate": "npm run format:check && npm run validate-html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MysteriousGreenBean/crystalforum.git"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MysteriousGreenBean/crystalforum/issues"
    },
    "lint-staged": {
        "*.{js,css,md,php,html,json}": "prettier --check"
    },
    "dependencies": {
        "js-beautify": "^1.15.4"
    }
}
